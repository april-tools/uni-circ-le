{
  "common":
  {
    "model-dir": "out",
    "max-num-epochs": 200,
    "patience": 5
  },
  "datasets": ["mnist"],
  "grid":
  {
    "common":
    {
      "batch-size": [64, 128, 256],
      "lr": [1e-1, 1e-2, 1e-3],
      "input-type": "cat",
      "reparam": "clamp"
    },
    "models":
    {
      "mnist":
      {
        "PD-CP":
        {
          "rg": "PD",
          "layer": "cp",
          "k": 64
        },
        "QG-Tucker":
        {
          "rg": "QG",
          "layer": "tucker",
          "k": 128
        }
      }
    }
  }
}
